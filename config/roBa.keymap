            >;
        };

        layer_11 {
            bindings = <
&kp F9  &kp F10  &kp F11  &kp F12  &trans                         &trans    &kp N7  &kp N8  &kp N9  &kp FSLH
&kp F5  &kp F6   &kp F7   &kp F8   &trans  &trans      &trans     &kp LEFT  &kp N4  &kp N5  &kp N6  &kp RIGHT
&kp F1  &kp F2   &kp F3   &kp F4   &trans  &trans      &trans     &kp N0    &kp N1  &kp N2  &kp N3  &kp DOT
&trans  &trans   &trans   &trans   &trans  &trans      &kp ENTER  &kp BSPC                          &trans
            >;
        };

        layer_12 {
            bindings = <
&trans  &kp RBKT    &kakko      &kp BSLH    &trans                                &trans               &kp LS(N7)  &kp LS(N8)  &kp LS(N9)  &trans
