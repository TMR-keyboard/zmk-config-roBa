#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/pointing.h>

&mt {
    flavor = "balanced";
    quick-tap-ms = <0>;
};

&trackball {
    scroll-layers = <5>;

    // レイヤー6: 仮想デスクトップ系＋タスクビュー＋普通の右矢印

    layer6_ctrl {
        layers = <6>;
        bindings =
            <&kp LG(LA(LC(RIGHT_ARROW)))>,
            // 右: Win + Alt + Ctrl + →,,,,,,,,,
            <&kp LG(LA(LC(LEFT_ARROW)))>,
            // 左: Win + Alt + Ctrl + ←,,,,,,,,,
            <&kp LG(TAB)>,
            // 上: Win + Tab,,,,,,,,,
            <&kp LG(M)>;

        // 下: → だけ

        tick = <200>;
        wait-ms = <40>;
        tap-ms = <5>;
    };

    // レイヤー5: ウィンドウスナップ系

    layer5_snap {
        layers = <7>;
        bindings =
            <&kp LG(RIGHT_ARROW)>,
            // 右にスナップ (Win + →),,,,,,,,,
            <&kp LG(LEFT_ARROW)>,
            // 左にスナップ (Win + ←),,,,,,,,,
            <&kp LG(UP_ARROW)>,
            // 最大化   (Win + ↑),,,,,,,,,
            <&kp LG(DOWN_ARROW)>;

        // 最小化 or 元のサイズ (Win + ↓)

        tick = <200>;
        wait-ms = <40>;
        tap-ms = <5>;
    };

    // レイヤー13: ウィンドウ管理と特殊ショートカット

    layer13_window_ctrl {
        layers = <11>;
        bindings =
            <&kp LC(LG(RIGHT))>,
            // 右：ウィンドウを右半分に (Ctrl + Cmd + →),,
            <&kp LC(LG(LEFT))>,
            // 左：ウィンドウを左半分に (Ctrl + Cmd + ←),,
            <&kp LA(LG(ENTER))>,
            // 上：Enter + Option + Command,,
            <&kp LG(W)>;

        // 下：アプリのウィンドウを閉じる (Cmd + W)

        tick = <200>;
        wait-ms = <40>;
        tap-ms = <5>;
    };

    // レイヤー12: macOSナビゲーション (Mission Control / Expose / Desktop)

    layer12_macos_nav {
        layers = <10>;
        bindings =
            <&kp LC(RIGHT)>,
            // 右：右の仮想デスクトップへ移動 (Ctrl + →),,
            <&kp LC(LEFT)>,
            // 左：左の仮想デスクトップへ移動 (Ctrl + ←),,
            <&kp LC(UP)>,
            // 上：ミッションコントロール (Ctrl + ↑),,
            <&kp LC(DOWN)>;

        // 下：アプリケーションエクスポーズ (Ctrl + ↓)

        tick = <200>;        // 連続入力を防ぐため、少し余裕を持たせた設定
        wait-ms = <40>;
        tap-ms = <5>;
    };

    // レイヤー11: ウィンドウ移動と検索・終了操作

    layer11_ops {
        layers = <12>;
        bindings =
            <&kp LS(LC(RIGHT))>,
            // 右：ウィンドウを右デスクトップへ移動 (Shift + Ctrl + →),,
            <&kp LS(LC(LEFT))>,
            // 左：ウィンドウを左デスクトップへ移動 (Shift + Ctrl + ←),,
            <&spotlight_search>,
            // 上：マクロ実行 (lang2 -> Spotlight),,
            <&kp LG(Q)>;

        // 下：アプリを完全に終了 (Cmd + Q)

        tick = <250>;            // マクロ起動などが暴発しないよう少し長めに設定
        wait-ms = <40>;
        tap-ms = <5>;
    };
};

/ {
    combos {
        compatible = "zmk,combos";

        tab {
            bindings = <&mkp MB5>;
            key-positions = <19 32>;
        };

        shift_tab {
            bindings = <&mkp MB4>;
            key-positions = <19 30>;
        };

        muhennkann {
            bindings = <&mkp MB3>;
            key-positions = <18 20>;
        };

        double_quotation {
            bindings = <&mkp MB1>;
            key-positions = <18 19>;
        };

        eq {
            bindings = <&mkp MB2>;
            key-positions = <19 20>;
        };

        goodnote {
            bindings = <&to 1>;
            key-positions = <15 16>;
            layers = <0>;
        };

        onisi {
            bindings = <&to 0>;
            key-positions = <15 16>;
            layers = <1>;
        };
    };

    macros {
        to_layer_0: to_layer_0 {
            compatible = "zmk,behavior-macro-one-param";
            #binding-cells = <1>;
            bindings = <&to 0 &macro_param_1to1 &kp MACRO_PLACEHOLDER>;
            label = "TO_LAYER_0";
        };

        taskview: taskview {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LG(TAB)>, <&macro_pause_for_release>, <&mkp LCLK>;

            label = "TASKVIEW";
        };

        kakko: kakko {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings =
                <&kp LANGUAGE_1 &kp RIGHT_BRACKET>,
                <&macro_wait_time 15>,
                <&kp BACKSLASH>,
                <&macro_wait_time 15>,
                <&kp ENTER &kp LEFT>;

            label = "KAKKO";
        };

        kagikakko: kagikakko {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings =
                <&kp LANGUAGE_2>,
                <&macro_wait_time 15>,
                <&kp LS(N8)>,
                <&macro_wait_time 15>,
                <&kp LS(N9)>,
                <&macro_wait_time 15>,
                <&kp LEFT>;

            label = "KAGIKAKKO";
        };

        numlayer: numlayer {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LANGUAGE_2 &mo 7>;
            label = "NUMLAYER";
        };

        doubleenter: doubleenter {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp ENTER>, <&macro_wait_time 10>, <&kp ENTER>;

            label = "DOUBLEENTER";
        };

        // lang2を押してからSpotlight（Cmd + Space）を起動するマクロ

        spotlight_search: spotlight_search {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LANGUAGE_2>, <&macro_wait_time 10>, <&kp LG(SPACE)>;

            label = "SPOTLIGHT_SEARCH";
        };
    };

    behaviors {
        lt_to_layer_0: lt_to_layer_0 {
            compatible = "zmk,behavior-hold-tap";
            label = "LAYER_TAP_TO_0";
            bindings = <&mo>, <&to_layer_0>;

            #binding-cells = <2>;
            tapping-term-ms = <200>;
        };

        momkp: momkp {
            compatible = "zmk,behavior-hold-tap";
            label = "MOMKP";
            bindings = <&mo>, <&mkp>;

            #binding-cells = <2>;
            tapping-term-ms = <150>;
        };

        kpmkp: kpmkp {
            compatible = "zmk,behavior-hold-tap";
            label = "KPMKP";
            bindings = <&kp>, <&mkp>;

            #binding-cells = <2>;
            tapping-term-ms = <150>;
            flavor = "tap-preferred";
        };

        lang2_RCLK: lang2_RCLK {
            compatible = "zmk,behavior-tap-dance";
            label = "LANG2_RCLK";
            #binding-cells = <0>;
            bindings = <&mkp RCLK>, <&kp LANGUAGE_2>;

            tapping-term-ms = <350>;
        };

        new_behavior_none: new_behavior_none {
            compatible = "zmk,behavior-hold-tap";
            label = "NEW_BEHAVIOR_NONE";
            bindings = <&kp>, <&lang2_RCLK>;

            #binding-cells = <2>;
            tapping-term-ms = <150>;
        };

        tapdancespace: tapdancespace {
            compatible = "zmk,behavior-hold-tap";
            label = "TAPDANCESPACE";
            #binding-cells = <2>;
            tapping-term-ms = <200>;
            bindings = <&mo>, <&spaceandlang2>;
        };

        spaceandlang2: spaceandlang2 {
            compatible = "zmk,behavior-tap-dance";
            label = "SPACEANDLANG2";
            #binding-cells = <0>;
            bindings = <&kp ENTER>, <&kp LANG1>;

            tapping-term-ms = <350>;
        };

        tskview_kp: tskview_kp {
            compatible = "zmk,behavior-hold-tap";
            label = "TSKVIEW_KP";
            bindings = <&taskview>, <&kp>;

            #binding-cells = <2>;
            tapping-term-ms = <150>;
        };

        LT_Advance: LT_Advance {
            compatible = "zmk,behavior-hold-tap";
            label = "LT_ADVANCE";
            bindings = <&mo>, <&kp>;

            #binding-cells = <2>;
            tapping-term-ms = <150>;
            flavor = "balanced";
        };

        MT_Advance: MT_Advance {
            compatible = "zmk,behavior-hold-tap";
            label = "MT_ADVANCE";
            bindings = <&kp>, <&kp>;

            #binding-cells = <2>;
            tapping-term-ms = <150>;
            flavor = "tap-preferred";
        };

        num_layer: num_layer {
            compatible = "zmk,behavior-hold-tap";
            label = "NUM_LAYER";
            bindings = <&numlayer>, <&kp>;

            #binding-cells = <2>;
            tapping-term-ms = <150>;
            flavor = "tap-preferred";
        };

        new_behavior: new_behavior {
            compatible = "zmk,behavior-hold-tap";
            label = "NEW_BEHAVIOR";
            bindings = <&kp>, <&lang2_RCLK>;

            #binding-cells = <2>;
            tapping-term-ms = <150>;
            flavor = "tap-preferred";
        };

        doubleneter: doubleneter {
            compatible = "zmk,behavior-tap-dance";
            label = "DOUBLENETER";
            #binding-cells = <0>;
            bindings = <&kp LC(C)>, <&doubleenter>;

            tapping-term-ms = <350>;
        };

        enterctrl: enterctrl {
            compatible = "zmk,behavior-hold-tap";
            label = "ENTERCTRL";
            bindings = <&kp>, <&spaceandlang2>;

            #binding-cells = <2>;
            tapping-term-ms = <150>;
            flavor = "tap-preferred";
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            bindings = <
&kp Q    &kp J         &LT_Advance 8 U         &kp COMMA        &kp DOT                                                             &kp F     &kp W            &LT_Advance 8 R  &kp Y  &kp P
&kp E    &kp I         &LT_Advance 7 A         &LT_Advance 7 O  &kp MINUS  &kp PG_UP                            &mkp MB5            &kp K     &LT_Advance 7 T  &LT_Advance 6 N  &kp S  &kp H
&kp L    &kp X         &kp N                   &kp V            &kp C      &kp PAGE_DOWN                        &mkp MB4            &kp G     &kp D            &kp M            &kp Z  &kp B
&kp TAB  &kp LEFT_WIN  &mt LEFT_ALT LC(SPACE)  &kp SPACE        &mkp LCLK  &new_behavior_none LEFT_SHIFT 0      &enterctrl RCTRL 0  &kp BSPC                                           &kp ESC
